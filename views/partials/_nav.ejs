<style>
    @keyframes disapairError {
        from {
            display: block;
        }

        to {
            display: none;
        }
    }

    .error,
    .success {
        display: none;
        position: fixed;
        top: 5rem;
        left: 5rem;
        right: 5rem;
        bottom: 5rem;
        height: fit-content;
        z-index: 20;
        min-width: 30%;
        background: #000000;
        opacity: .9;
        border: 1px solid red;
        border-radius: 25px;
    }

    .err_active {
        display: block;
        animation: disapairError 3s ease 1 forwards !important;
    }

    .error span,
    .success span {
        display: block;
        width: 50%;
        margin: .5rem auto;
        background-color: white;
        color: red;
        border: 1px solid red;
        border-radius: 50px;
        padding: .5rem;
        opacity: 1;
        z-index: 2;
    }

    .success {
        display: block;
        background-color: green !important;
        animation: disapairError 3s ease 1 forwards !important;
    }

    .success .alert-success {
        color: green !important;
        border: 1px solid white;
    }
</style>
<div id="errorid" class='<%= errors !=""? "error err_active" : success !=""? "error success" : "error" %>'>
    <% if(errors !="" ) { %>
        <% errors.forEach((item)=> { %>
            <span class="alert-danger">
                <%- item %>
            </span>
            <% }); %>
                <% } %>

                    <% if(success !="" ) { %>
                        <% success.forEach((item)=> { %>
                            <span class="alert-success">
                                <%- item %>
                            </span>
                            <% }); %>
                                <% } %>
</div>